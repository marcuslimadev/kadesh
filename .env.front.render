# .env.front.render
# Environment variables suggested for deploying the frontend on Render
# Do NOT commit secrets with real values. Replace placeholders as needed.

# Backend API
VITE_API_URL=https://kadesh-backend.onrender.com
VITE_BACKEND_URL=https://kadesh-backend.onrender.com
VITE_API_TIMEOUT=30000

# App
VITE_APP_NAME=Kadesh
VITE_APP_DESCRIPTION=Plataforma de freelancers profissionais
VITE_APP_VERSION=2.0.0

# Feature flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
VITE_DEBUG_MODE=false

# File upload limits
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Payments / Social auth (fill if used)
VITE_MERCADOPAGO_PUBLIC_KEY=
VITE_GOOGLE_CLIENT_ID=

# Production URLs (update to the Render domain you get after deploy)
VITE_PRODUCTION_URL=https://kadesh-frontend.onrender.com

# Optional integrations
VITE_RECAPTCHA_SITE_KEY=
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=
