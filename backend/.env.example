# ========================================
# KADESH BACKEND - EXAMPLE ENVIRONMENT
# ========================================
# Copie para .env e configure suas credenciais

# ----------------------------------------
# SERVER
# ----------------------------------------
PORT=3001
NODE_ENV=development

# ----------------------------------------
# DATABASE (MySQL)
# ----------------------------------------
# Local development
DB_HOST=localhost
DB_PORT=3306
DB_NAME=kadesh
DB_USER=root
DB_PASSWORD=

# Produção Hostinger (substitua pelos valores do cPanel)
# DB_NAME=u123456789_kadesh
# DB_USER=u123456789_kadesh
# DB_PASSWORD=sua_senha_mysql

# ----------------------------------------
# JWT
# ----------------------------------------
JWT_SECRET=change-me-to-random-64-char-string
JWT_EXPIRES_IN=7d

# ----------------------------------------
# FRONTEND CORS
# ----------------------------------------
FRONTEND_URL=http://localhost:3000
FRONTEND_URLS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173

# ----------------------------------------
# SECURITY
# ----------------------------------------
MAX_REQUESTS_PER_MINUTE=100

# ----------------------------------------
# MERCADO PAGO
# ----------------------------------------
# Desenvolvimento: Use credenciais TEST
MP_ACCESS_TOKEN=TEST-your-access-token
MP_PUBLIC_KEY=TEST-your-public-key
MP_WEBHOOK_SECRET=change-me
MP_NOTIFICATION_URL=http://localhost:3001/api/payments/mercadopago/webhook
MP_SUCCESS_URL=http://localhost:3000/wallet?payment=success
MP_FAILURE_URL=http://localhost:3000/wallet?payment=failure
MP_PENDING_URL=http://localhost:3000/wallet?payment=pending
MP_MIN_DEPOSIT=10

# ----------------------------------------
# PLATFORM
# ----------------------------------------
PLATFORM_FEE_PERCENT=10

# ----------------------------------------
# AUCTION SCHEDULER
# ----------------------------------------
AUCTION_CHECK_INTERVAL=60000
