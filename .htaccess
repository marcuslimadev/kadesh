RewriteEngine On
RewriteBase /

# Redirect API to PHP handler
RewriteRule ^api/(.*)$ api/index.php [L,QSA]

# Force root to use Vite build
RewriteRule ^$ dist/index.html [L]

# Do not rewrite build assets
RewriteRule ^dist/ - [L]

# Serve files and directories directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# SPA fallback to build
RewriteRule ^ dist/index.html [L]
