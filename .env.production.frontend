# ===========================================
# KADESH FRONTEND - PRODUCTION ENVIRONMENT
# ===========================================
# Gerado em: 30/12/2025
# Deploy: Vercel
# Build Command: npm run build
# Framework: Vite + Vue 3

# ============ API CONFIGURATION ============
# Backend URL (Render Web Service)
VITE_API_URL=https://kadesh-2.onrender.com

# Timeout para requisições (ms)
VITE_API_TIMEOUT=30000

# ============ APP CONFIGURATION ============
VITE_APP_NAME=Kadesh
VITE_APP_DESCRIPTION=Marketplace de freelancers com leilão reverso
VITE_APP_VERSION=2.0.0
VITE_APP_URL=https://kadesh-two.vercel.app

# ============ FEATURES FLAGS ============
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_WALLET=true
VITE_DEBUG_MODE=false

# ============ FILE UPLOAD ============
# Tamanho máximo: 5MB
VITE_MAX_FILE_SIZE=5242880

# Tipos permitidos
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# ============ MERCADO PAGO ============
# Chave pública PRODUÇÃO (sem TEST-)
VITE_MERCADOPAGO_PUBLIC_KEY=APP_USR-xxxxxxxx-xxxxxx-xx

# ============ WEBSOCKET (Socket.io) ============
# URL do backend para conexões WebSocket
VITE_SOCKET_URL=https://kadesh-2.onrender.com

# Reconnection settings
VITE_SOCKET_RECONNECTION=true
VITE_SOCKET_RECONNECTION_ATTEMPTS=5
VITE_SOCKET_RECONNECTION_DELAY=3000

# ============ AUCTION SETTINGS ============
# Atualização automática de leilões (60 segundos)
VITE_AUCTION_REFRESH_INTERVAL=60000

# ============ PRODUCTION URLS ============
VITE_PRODUCTION_URL=https://kadesh-two.vercel.app
VITE_BACKEND_URL=https://kadesh-2.onrender.com

# ============ GOOGLE ANALYTICS (OPCIONAL) ============
# Descomentar quando configurar
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX
# VITE_GA_DEBUG_MODE=false

# ============ GOOGLE OAUTH (FUTURO) ============
# Descomentar quando implementar
# VITE_GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com

# ============ SENTRY ERROR TRACKING (OPCIONAL) ============
# Descomentar quando configurar
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
# VITE_SENTRY_ENVIRONMENT=production
# VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# ============ RECAPTCHA (FUTURO) ============
# Descomentar quando implementar
# VITE_RECAPTCHA_SITE_KEY=6LeXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ============ SOCIAL MEDIA (SEO) ============
VITE_TWITTER_HANDLE=@kadesh
VITE_FACEBOOK_APP_ID=

# ============ CACHE & PERFORMANCE ============
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=3600000
